        var pp = [];
        var qq = [];
        for (var i=1; i<d.length; i++) {
         pp.push( d[i].industry);
        }
        for (var j=1; j<d.length; j++) {
         qq.push( d[j].num);
        }
        var chartData = {
          labels: pp,
          datasets : [
            {
              label : 'Companies',
              backgroundColor: 'rgba(216, 221, 129, 0.98)',
              borderWidth: 0.5,
              hoverBackgroundColor: 'rgba(156, 93, 93, 0.75)',
              pointStyle: 'Doughnut',
              borderColor: 'rgba(255, 255, 255, 0.67)',

              data: qq,
            }

          ]

        }
        var pie = $('#pie');
        var pie = new Chart(pie, {
          type: chartType,
          data: chartData
          ,
          options:{
            title:{
              display: true,
              text: 'Industires in region',
              fontFamily: 'Robato',
              fontColor: '#000',
              defaultFontColor: 'black',
              fontWeight: 'normal'
            },
                legend:{
                  display: false
                },
                tooltips: {
                  fontFamily: 'Dosis'
                }
              }
        });
      }


    });

    }
    else{
      alert("Please select a city.");
      return false;
    }

  });

